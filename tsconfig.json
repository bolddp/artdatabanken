{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "noEmit": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "sourceMap": false,
    "lib": ["ESNext"],
    "strict": true,
    "removeComments": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "declaration": false,
    "noEmitOnError": false
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./test"]
}
